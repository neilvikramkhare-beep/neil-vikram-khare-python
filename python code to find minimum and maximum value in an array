a = []
for i in range(10):
    n = int(input(f"Enter number {i+1} of 10: "))
    a.append(n)
max_value = max(a)
min_value = min(a)
index_max = a.index(max_value)
index_min = a.index(min_value)
print(f"The list is: {a}")
print(f"The maximum value is: {max_value}")
print(f"The index of the first maximum value is: {index_max}")
print(f"The minimum value is: {min_value}")
print(f"The index of the first minimum value is: {index_min}")

