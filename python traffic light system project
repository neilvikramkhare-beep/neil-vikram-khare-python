class trafficSystem:
    def __init__(self, company, city, country):
        self.company = company
        self.city = city
        self.country = country
    def getdata(self):
        print("Enter the company of the car:", self.company)
        print("\nEnter the city of the car:", self.city)
        print("\nEnter the country of the car:", self.country)
    def showdata(self):
        print("Company:", self.company)
        print("City:", self.city)
        print("Country:", self.country)
class company(trafficSystem):
    def __init__(self, company, city, country, DOE, branch, profit):
        super().__init__(company, city, country)
        self.DOE = DOE
        self.branch = branch
        self.profit = profit
    def getdata1(self):
        print("Enter the date of establishment:", self.DOE)
        print("Enter the branch of the company:", self.branch)
        print("Enter the profit gained:", self.profit)
    def showdata1(self):
        print("DOE:", self.DOE)
        print("Branch:", self.branch)
        print("Profit:", self.profit)
class system(company):
    def __init__(self, company, city, country, DOE, branch, profit, light):
        super().__init__(company, city, country, DOE, branch, profit)
        self.light = light
    def getdata2(self):
        self.light = input("Enter the signal light: ")
    def showdata2(self):
        print("Light:", self.light)
go = False
light = "red"
if light == "red":
    print("Stop")
if light == "red" and go:
    print("Pay 5000")
if light == "green":
    print("Go")
if light == "yellow":
    print("Get ready")
s = system("Tesla", "Pathankot", "India", "2012", "Main North", "5 Million", "green")
print("\nDisplaying Information")
s.showdata()
s.showdata1()
s.showdata2()
