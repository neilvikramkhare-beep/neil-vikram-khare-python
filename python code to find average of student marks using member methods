class Student:
    def __init__(self, fullname, marks):
        self.name = fullname
        self.marks = marks
    def getavg(self):
        totalsum = 0
        for val in self.marks:
            totalsum += val
        average = totalsum / len(self.marks)
        print(f"Hi {self.name}, your average score is: {average:.2f}")
s1 = Student("Neil khare", [87, 90, 98])
s1.getavg()
s1.name = "Shrirang shingane"
s1.getavg()
