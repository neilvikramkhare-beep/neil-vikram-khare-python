class trafficSystem:
    def __init__(self, company, city, country):
        self.company = company
        self.city = city
        self.country = country
    def getdata(self):
        print("Enter the company of the car:", self.company)
        print("\nEnter the city of the car:", self.city)
        print("\nEnter the country of the car:", self.country)
    def showdata(self):
        print("Company|", self.company,"\tCity|", self.city,"\tCountry|", self.country)
class company(trafficSystem):
    def __init__(self, company, city, country, DOE, branch, profit):
        super().__init__(company, city, country)
        self.DOE = DOE
        self.branch = branch
        self.profit = profit
    def getdata1(self):
        print("Enter the date of establishment:", self.DOE)
        print("Enter the branch of the company:", self.branch)
        print("Enter the profit gained:", self.profit)
    def showdata1(self):
        print("DOE|", self.DOE,"\tBranch|", self.branch,"\tProfit|", self.profit)
class system(company):
    def __init__(self, company, city, country, DOE, branch, profit, light):
        super().__init__(company, city, country, DOE, branch, profit)
        self.light = light
    def getdata2(self):
        self.light = input("Enter the signal light: ")
    def showdata2(self):
        print("Light:", self.light)
go = False
light = "red"
if light == "red":
    print("Stop")
if light == "red" and go:
    print("Pay 5000")
if light == "green":
    print("Go")
if light == "yellow":
    print("Get ready")
class police(system):
    def __init__(self,company, city, country, DOE,branch,profit, light,total,salary,DOJ):
        super().__init__(company, city, country, DOE,branch,profit, light)
        self.total=total
        self.salary=salary
        self.doj=DOJ
    def getdata3(self):
        print("Enter the total number of policemen:",self.total)
        print("Enter the salary of policemen:",self.salary)
        print("Enter the DOJ of policemen:",self.doj)
    def showdata3(self):
        print("Total policemen|",self.total,"\tSalary|",self.salary,"\tDOJ|",self.doj)
p = police("Tesla", "Pathankot", "India", 2012, "Main North", 5000000, "green", 450, 67000, "12/09/20")
p.getdata()
p.getdata1()
p.getdata2()
p.getdata3()
print("\nDisplaying Information")
p.showdata()
p.showdata1()
p.showdata2()
p.showdata3()
